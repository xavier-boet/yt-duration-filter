<div class="modal fade" id="{{ modalId }}" tabindex="-1" aria-labelledby="{{ modalId }}Label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="{{ modalId }}Label">{{ title }}</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="{{ formId }}">
                    <div class="mb-3">
                        <label for="{{ inputId }}" class="form-label">{{ inputLabel }}</label>
                        <input type="text" class="form-control" id="{{ inputId }}" required>
                    </div>
                    <div id="{{ responseMessageId }}" class="alert d-none"></div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary" id="{{ submitId }}">Add</button>
            </div>
        </div>
    </div>
</div>